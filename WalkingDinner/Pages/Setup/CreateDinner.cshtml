@page
@model Pages.Setup.CreateDinnerModel
@using WalkingDinner.Extensions
@using WalkingDinner.Models
@{
    ViewData[ "Title" ] = "Setup page";
}

<h1>Create</h1>

<h4>Dinner</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <span asp-validation-for="Dinner" class="text-danger"></span>

            <h4>Het diner</h4>
            <div class="form-group">
                <label asp-for="Dinner.Title" class="control-label"></label>
                <input asp-for="Dinner.Title" class="form-control" />
                <span asp-validation-for="Dinner.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dinner.Description" class="control-label"></label>
                <textarea asp-for="Dinner.Description" class="form-control"></textarea>
                <span asp-validation-for="Dinner.Description" class="text-danger"></span>
            </div>

            <h4>Verzamelpunt</h4>
            <partial name="_AddressView" for="Dinner.Address" />

            <h4>Data</h4>
            <div class="form-group">
                <label asp-for="Dinner.Date" class="control-label"></label>
                <input asp-for="Dinner.Date" class="form-control" value="@Model.Dinner.Date.ToString("s")" min="@DateTime.Now.AddDays( Dinner.MIN_DAYS_IN_ADVANCE ).SetTime( 0, 0 ).ToString( "s" )" />
                <span asp-validation-for="Dinner.Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Dinner.SubscriptionStop" class="control-label"></label>
                <input asp-for="Dinner.SubscriptionStop" class="form-control" value="@Model.Dinner.SubscriptionStop.ToString("s")" min="@DateTime.Now.AddDays( Dinner.MIN_DAYS_IN_ADVANCE - 1 ).SetTime( 0, 0 ).ToString( "s" )" />
                <span asp-validation-for="Dinner.SubscriptionStop" class="text-danger"></span>
            </div>

            <h4>Prijsinformatie</h4>
            <div class="form-group">
                <label asp-for="Dinner.Price" class="control-label"></label>
                <input asp-for="Dinner.Price" class="form-control" />
                <span asp-validation-for="Dinner.Price" class="text-danger"></span>
            </div>

            <h4>Uw gegevens</h4>

            <div class="form-group">
                <label asp-for="Couple.EmailAddress" class="control-label"></label>
                <input asp-for="Couple.EmailAddress" class="form-control" />
                <span asp-validation-for="Couple.EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Couple.PhoneNumber" class="control-label"></label>
                <input asp-for="Couple.PhoneNumber" class="form-control" />
                <span asp-validation-for="Couple.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Couple.PersonMain.FirstName" class="control-label"></label>
                <input asp-for="Couple.PersonMain.FirstName" class="form-control" />
                <span asp-validation-for="Couple.PersonMain.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Couple.PersonMain.Preposition" class="control-label"></label>
                <input asp-for="Couple.PersonMain.Preposition" class="form-control" />
                <span asp-validation-for="Couple.PersonMain.Preposition" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Couple.PersonMain.LastName" class="control-label"></label>
                <input asp-for="Couple.PersonMain.LastName" class="form-control" />
                <span asp-validation-for="Couple.PersonMain.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Couple.IBAN" class="control-label"></label>
                <input asp-for="Couple.IBAN" class="form-control" />
                <span asp-validation-for="Couple.IBAN" class="text-danger"></span>
            </div>

            <partial name="_AddressView" for="Couple.Address" />

            <div class="form-group">
                <input type="submit" value="Aanmaken" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync( "_ValidationScriptsPartial" );}
}